<%= simple_form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-5">
      <%= f.input :name %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1">
      <%= f.input :price %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-5">
      <%= f.input :description %>
    </div>
  </div>

  <br>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to "Cancel", products_path, :class => 'btn btn-default' if action_name != 'index'  %>

<% end %>
